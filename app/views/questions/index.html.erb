<h1>
  All Questions
  <%= link_to "New", new_question_path, class: 'btn btn-primary' %>
</h1>
<% @questions.each do |question| %>
<div class="media">
  <div class="media-body">
    <h4 class="media-heading">
      <% unless question.resolved %>
        <%= link_to question.title, question %>
      <% else %>
        <%= question.title %>
          <%= link_to "This Question Is Resolved, Click Here To Delete Question", question, method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure you want to delete this question?'} %>
      <% end %>
    </h4>
  </div>
</div>
<% end %>
